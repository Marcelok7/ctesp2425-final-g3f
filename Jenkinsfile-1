pipeline {
    agent any

    environment {
        // Defina o nome da solução e o diretório de testes
        SOLUTION_NAME = 'RestauranteFinal.sln'
        TEST_PROJECT = 'RestauranteTestes.csproj'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clonar o repositório
                git 'https://github.com/Marcelok7/ctesp2425-final-g3f.git'
            }
        }

        stage('Restore') {
            steps {
                // Restaurar pacotes NuGet
                sh 'dotnet restore'
            }
        }

        stage('Build') {
            steps {
                // Construir a solução
                sh 'dotnet build $SOLUTION_NAME --configuration Release'
            }
        }

        stage('Test') {
            steps {
                // Executar testes unitários
                sh 'dotnet test $TEST_PROJECT --configuration Release --no-build --logger "trx;LogFileName=test-results.trx"'
            }
            post {
                always {
                    // Publicar resultados dos testes
                    junit '*/TestResults/test-results.trx'
                }
            }
        }
    }

    post {
        always {
            // Limpar arquivos temporários
            cleanWs()
        }
    }
}